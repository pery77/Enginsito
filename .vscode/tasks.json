{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "task-my-rc-build",
            "command": "windres ${workspaceFolder}/src/my.rc ${workspaceFolder}/src/my.o",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "task-clean",
            "command": "del ${workspaceFolder}/dist/*.exe ; del ${workspaceFolder}/obj/*.o",
            "type": "shell",
            "group": "build"
        },
        {
            "label": "task-clean-all",
            "command": "del ${workspaceFolder}/dist/*.exe; del ${workspaceFolder}/obj/*.o; del ${workspaceFolder}/obj/imgui/*.o; del ${workspaceFolder}/obj/vm/*.o; del ${workspaceFolder}/obj/mybasic/*.o" ,
            "type": "shell",
            "group": "build"
        },
        {
            "label": "task-make-debug",
            "command": "mingw32-make -j MODE=debug DEFINES=\"-DDEBUG\"",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "group": {
                "kind": "all",
                "isDefault": true
            },
            "problemMatcher": "$gcc",        
            "dependsOrder": "sequence",
            "dependsOn": [
                "task-clean"
            ]
        },
        {
            "label": "task-make-release",
            "command": "mingw32-make -j MODE=release",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "group": {
                "kind": "all",
                "isDefault": true
            },
            "problemMatcher": "$gcc",        
            "dependsOrder": "sequence",
            "dependsOn": [
                "task-clean-all",
                "task-my-rc-build"  
            ]
        },
        {
            "label": "task-make-fast",
            "command": "mingw32-make -j MODE=debug DEFINES=\"-DDEBUG\"",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "type": "shell",
            "group": {
                "kind": "all",
                "isDefault": true
            },
            "problemMatcher": "$gcc"
        }
    ]
}
